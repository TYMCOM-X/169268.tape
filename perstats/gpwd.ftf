
	integer gname(4),ghost,xname(4),xpass(3)

	common /gate/gname,ghost
	common /xray/xname,xpass

	type 10
10	format(' gateway username: ',$)
	accept 15,gname
15	format(4a5)

	type 20
20	format(' gateway host: ',$)
	accept 25, ghost
25	format(a4)

	type 30
30	format(' xray username: ',$)
	accept 35,xname
35	format(4a5)

	call echo(0)
	type 40
40	format(' xray password: ',$)
	accept 45,xpass
45	format(3a5)

	call echo(1)



	return
	end

